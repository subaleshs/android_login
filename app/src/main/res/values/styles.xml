<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="error_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_700</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/login_button_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="logout_button">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/logout_button_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="account_buttons">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/account_button_shape</item>
        <item name="android:textColor">@color/blue_gray_dark</item>
    </style>

    <style name="text_size_login">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="hint_text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="no_internet_text">
        <item name="android:textColor">@color/red_700</item>
        <item name="textAllCaps">true</item>
        <item name="android:text">@string/network_error</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="form_card">
        <item name="android:background">@color/login_background</item>
        <item name="android:elevation">10dp</item>
    </style>

</resources>